{
  "name": "todo-app-monorepo",
  "version": "1.0.0",
  "description": "Full-Stack Todo Web Application - Monorepo",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && uvicorn src.main:app --reload --port 8000",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && echo 'Backend build'",
    "build:frontend": "cd frontend && npm run build",
    "test": "cd backend && python -m pytest tests/ && cd frontend && npm run test"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  },
  "workspaces": [
    "frontend",
    "backend"
  ]
}